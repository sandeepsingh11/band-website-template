// recent news
mixin recentNews()
	#recentNews
		- n = 0
		while n < 3
			h4= blogs[n].title
			p= blogs[n].month
			if n != 2
				hr
			- n++

// photo gallery
mixin gallery()
	#gallery
		- n = 0
		while n < 3
			- i = 0
				while i < 3
					img(src='blog4.jpg', style='width: 70px; height: auto')
					- i++
			- n++

// useful links
- var usefuls = ['Tickets', 'Contacts', 'Tour', 'Album', 'Meet us']

mixin useful()
	#useful
		each link in usefuls
			a(href='#')
				= link
				hr
